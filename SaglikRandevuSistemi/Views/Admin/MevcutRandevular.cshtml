@using SaglikRandevuSistemi.Models
@using SaglikRandevuSistemi.ViewModels
@model List<RandevuDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var tempMessage = TempData["Success"];
}

<div class="tab-content">
    @if (Model.Count != 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hasta</th>
                    <th>Doktor</th>
                    <th>Hastahane</th>
                    <th>Saat</th>
                    <th>Durum</th>
                    <th>Klinik</th>
                    <th>Gun</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Hasta
                        </td>
                        <td>
                            @item.Doktor
                        </td>
                        <td>
                            @item.Hastane
                        </td>
                        <td>
                            @item.RandSaatID
                        </td>
                        <td>
                            @item.RandDurumID
                        </td>
                        <td>
                            @item.Klinik
                        </td>
                        <td>
                            @item.RandevuGun
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

